{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@consts/*": [
        "src/consts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ]
    }
  }
}
